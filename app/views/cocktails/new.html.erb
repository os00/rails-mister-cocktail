<div class="container">
  <div class="row">
    <div class="col-5">
      <h2>Create new cocktail</h2>
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-group">
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :procedure %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
