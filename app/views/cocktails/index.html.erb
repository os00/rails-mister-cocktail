<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Cocktails</h1>
    </div>
  </div>
  <div class="row">
    <!-- <div class="col-12"> -->

      <!-- <ul  class="list-group"> -->
        <div class="d-flex justify-content-between">
          <% @cocktails.each do |cocktail| %>
            <!-- <li class="list-group-item"> -->

            <div class="col-3">
              <div class="cocktail-card">
                <div>
                  <%= image_tag cocktail.image %>
                </div>
                <div class="text-box p-2">
                  <div class="left-text">
                    <h5><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>

                    <p><em><%= "# of ingredients: #{cocktail.doses.count}" %></em></p>
                    <p><em><%= "Rating: #{cocktail.doses.count}" %></em></p>
                  </div>
                  <div class="d-flex align-items-end">
                    <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- </li> -->
          <% end %>
        </div>
      <!-- </ul> -->
    <!-- </div> -->
  </div>
  <div class="row">
    <div class="col-5">
      <%= cl_image_tag("qpgw5y0dactuqvlhnp2n", width: 400, height: 300, crop: :fill) %>
      <%= cl_image_tag("mvjutj63jcxkq4vcykme", width: 150, height: 150, crop: :thumb, gravity: :face) %>
      <%= link_to "Add new cocktail", new_cocktail_path, class: "button" %>
    </div>
  </div>
</div>
